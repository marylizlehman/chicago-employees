<div class="panel" ng-controller="employeesCtrl" ng-init="init({employees: <%= @employees %>})">

<datalist id="departments">
  <option ng-repeat="department in departments" value="{{department.name}}">
  </datalist>

<ul class="pager">
  <li class="previous"><a href="">&larr; Previous Page</a></li>
  <li><input ng-model="deptQuery" placeholder="Department" list="departments"></li>
  <span class="label label-primary">Page: {{ page }}</span>
  <li class="next"><a href="">Next Page &rarr;</a></li>
</ul>

  <ul class="list-group">
    <li class="list-group-item" ng-repeat="employee in employees | filter:{ department: deptQuery }">
    <span>{{ employee.name }}</span>
    <span class="pull-right">{{ employee.department }}</span>
    <span>{{ employee.title }}</span>
    <p> <strong>Annual Salary:</strong> {{ employee.salary | currency }}</p>
    </li>
  </ul>

</div>

